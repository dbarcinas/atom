{
    "name": "dbarcinas/atom",
    "description": "The freedom PHP micro framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dan Barcinas",
            "email": "barcinasdan@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "autoload": {
        "psr-4": {
            "atom\\": "src/"
        },
        "files": [
            "src/router.php",
            "src/template.php",
            "src/config.php"
        ]
    },
    "require-dev": {
        "pestphp/pest": "^3.7",
        "phpstan/phpstan": "^2.1"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
